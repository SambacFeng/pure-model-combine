{
    "name": "@pure-model-combine/core",
    "version": "0.0.0",
    "private": true,
    "main": "dist/index.cjs.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "scripts": {
        "build": "tsup src/index.tsx --format esm,cjs --dts --external react --inject node_modules/scripts/react-shim.js",
        "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react --inject node_modules/scripts/react-shim.js",
        "lint": "TIMING=1 eslint src/**/*.tsx --fix && tsc --noEmit",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@pure-model/core": "^1.2.13",
        "@types/lodash.mapkeys": "^4.6.6",
        "fast-equals": "^3.0.0",
        "lodash.mapkeys": "^4.6.0",
        "lodash.mapvalues": "^4.6.0",
        "react": "^17.0.2",
        "react-tracked": "^1.7.6",
        "scheduler": "^0.20.2",
        "use-subscription": "^1.5.1"
    },
    "devDependencies": {
        "@tsconfig/vite-react": "^1.0.0",
        "@types/lodash.mapvalues": "^4.6.6",
        "@types/react": "^17.0.39",
        "@types/use-subscription": "^1.0.0",
        "eslint": "^7.32.0",
        "scripts": "workspace:*",
        "tsconfig": "workspace:*",
        "tsup": "^5.10.1",
        "typescript": "^4.6.2"
    }
}
